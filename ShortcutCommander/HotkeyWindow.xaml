<Window x:Class="ShortcutCommander.HotkeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vsfx="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShortcutCommander" Topmost="True" ShowActivated="False" ShowInTaskbar="False"
        mc:Ignorable="d" FontSize="20" FontWeight="ExtraLight" Foreground="{DynamicResource {x:Static vsfx:EnvironmentColors.TitleBarInactiveTextBrushKey}}" Opacity="0.9" WindowStyle="None" WindowStartupLocation="CenterScreen" IsHitTestVisible="False" Background="Transparent" AllowsTransparency="True" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid>
        <Border CornerRadius="20" Background="{DynamicResource {x:Static vsfx:EnvironmentColors.TitleBarInactiveGradientBrushKey}}">
            <StackPanel Margin="20" Name="CommandText" Orientation="Horizontal">
            </StackPanel>
        </Border>
    </Grid>
</Window>
